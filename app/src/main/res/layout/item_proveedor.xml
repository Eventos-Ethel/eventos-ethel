<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_background"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="12dp"
    android:elevation="4dp"
    android:backgroundTintMode="src_atop">

    <!-- Nombre del proveedor -->
    <TextView
        android:id="@+id/tvNombreProveedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del proveedor"
        android:textStyle="bold"
        android:textColor="@color/peruvian_wine"
        android:textSize="18sp"
        android:fontFamily="@font/playfair_display_bold" />

    <!-- Servicio y precio -->
    <TextView
        android:id="@+id/tvServicioProveedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Servicio - Precio"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <!-- Teléfono -->
    <TextView
        android:id="@+id/tvTelefonoProveedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celular"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:layout_marginTop="2dp" />

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="end">

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:backgroundTint="@color/btnRegistrarRP2"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/playfair_display_bold" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:backgroundTint="@color/btnRegresarRP2"
            android:textColor="@color/peruvian_wine"
            android:textSize="14sp"
            android:fontFamily="@font/playfair_display_bold" />
    </LinearLayout>
</LinearLayout>
